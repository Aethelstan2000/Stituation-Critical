
<Window x:Class="StituationCritical.Settings.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Settings" Height="420" Width="440" WindowStartupLocation="CenterOwner"
        ResizeMode="CanMinimize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="General" FontWeight="Bold" Margin="0,0,0,4"/>
            <UniformGrid Columns="4" Rows="2" Margin="0,4,0,0">
                <TextBlock Text="Default Width" VerticalAlignment="Center"/>
                <xctk:IntegerUpDown x:Name="WidthBox" Minimum="1" Maximum="2048" Width="80"/>
                <TextBlock Text="Default Height" VerticalAlignment="Center"/>
                <xctk:IntegerUpDown x:Name="HeightBox" Minimum="1" Maximum="2048" Width="80"/>
                <TextBlock Text="Default Zoom" VerticalAlignment="Center"/>
                <xctk:DoubleUpDown x:Name="ZoomBox" Minimum="0.1" Maximum="64" Increment="0.1" Width="80"/>
            </UniformGrid>
        </StackPanel>

        <StackPanel Orientation="Vertical" Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Reference Layer" FontWeight="Bold" Margin="0,0,0,4"/>
            <UniformGrid Columns="4" Rows="2" Margin="0,4,0,0">
                <TextBlock Text="Ref Opacity" VerticalAlignment="Center"/>
                <xctk:DoubleUpDown x:Name="RefOpacityBox" Minimum="0" Maximum="1" Increment="0.05" Width="80"/>
                <TextBlock Text="Pixel Layer Opacity" VerticalAlignment="Center"/>
                <xctk:DoubleUpDown x:Name="PixelOpacityBox" Minimum="0" Maximum="1" Increment="0.05" Width="80"/>
                <TextBlock Text="Show Reference" VerticalAlignment="Center"/>
                <CheckBox x:Name="RefVisibleCheck" VerticalAlignment="Center"/>
            </UniformGrid>
        </StackPanel>

        <StackPanel Orientation="Vertical" Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="Export" FontWeight="Bold" Margin="0,0,0,4"/>
            <UniformGrid Columns="4" Rows="2" Margin="0,4,0,0">
                <TextBlock Text="Export DPI" VerticalAlignment="Center"/>
                <xctk:IntegerUpDown x:Name="DpiBox" IsEnabled ="False" Minimum="72" Maximum="1200" Increment="12" Width="80"/>
                <TextBlock Text="Page Size" VerticalAlignment="Center"/>
                <ComboBox x:Name="PageSizeBox" Width="80">
                    <ComboBoxItem Content="A4"/>
                    <ComboBoxItem Content="Letter"/>
                    <ComboBoxItem Content="A3"/>
                </ComboBox>
                <TextBlock Text="Grid Cell (mm)" VerticalAlignment="Center"/>
                <xctk:DoubleUpDown x:Name="GridCellBox" Minimum="1" Maximum="10" Increment="0.5" Width="80"/>
                <TextBlock Text="Cloth Count" VerticalAlignment="Center"/>
                <xctk:DoubleUpDown x:Name="ClothCountBox" Minimum="7" Maximum="28" Increment="0.5" Width="80"/>
            </UniformGrid>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Save" Width="90" Margin="0,0,8,0" IsDefault="True" Click="Save_Click"/>
            <Button Content="Cancel" Width="90" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
